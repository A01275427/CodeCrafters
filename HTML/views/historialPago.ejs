<%- include('includes/sidebar.ejs') %>

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title><%= pageTitle %></title>
  <!-- Copia y pega los enlaces a tus archivos CSS y JS desde pago_alumno.ejs -->
  <link rel="stylesheet" href="/css/stylesb.css">
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  <style>
    .page_content {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      margin-left: 250px; /* Ajusta este valor según sea necesario */
    }
    table {
      width: 80%;
      margin-top: 20px;
      border-collapse: collapse;
    }
    th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
    th {
      background-color: #f2f2f2;
    }
    form {
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <h1>Historial de Pagos</h1>

  <div class="page_content">
    <table>
      <thead>
        <tr>
          <th>ID Pago</th>
          <th>ID Usuario</th>
          <th>Cantidad Pagada</th>
          <th>Fecha de Pago</th>
          <th>Método</th>
        </tr>
      </thead>
      <tbody>
        <% payments.forEach(function(payment) { %>
          <tr>
            <td><%= payment.IDPago %></td>
            <td><%= payment.IDUsuario %></td>
            <td>$<%= payment.Cant_pagada.toFixed(2) %></td>
            <td><%= new Date(payment.Fecha_de_pago).toLocaleDateString() %></td>
            <td><%= payment.Metodo %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <form action="/pagos/descargar-historial/<%= userID %>" method="GET">
      <button type="submit">Descargar como PDF</button>
    </form>
  </div>

</body>
</html>
